<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="629dp"
        android:layout_height="732dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.502"
        app:srcCompat="@drawable/fundo3" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left" />

    <ImageButton
        android:id="@+id/bottonMenu"
        android:layout_width="77dp"
        android:layout_height="81dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu" />

    <ImageButton
        android:id="@+id/bottonMaterial"
        android:layout_width="85dp"
        android:layout_height="90dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="88dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/bottonMenu"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_material" />

    <ImageButton
        android:id="@+id/bottonAtividade"
        android:layout_width="85dp"
        android:layout_height="90dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="88dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/bottonMenu"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_atividades" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="57dp"
        android:layout_height="62dp"
        android:clickable="true"
        app:backgroundTint="@android:color/transparent"
        app:srcCompat="@drawable/ic_fecha_menu"
        tools:layout_editor_absoluteX="164dp"
        tools:layout_editor_absoluteY="211dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="305dp" />


</android.support.constraint.ConstraintLayout>